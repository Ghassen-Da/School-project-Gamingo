{% extends 'home/home.html.twig' %}

{% block icon %}
    <link rel="icon" type="image/png" href="{{asset('form_staff/images/icons/game-controller.png')}}"/>
{% endblock %}

{% block style %}
    <link rel="stylesheet" href="{{ asset('css/Connected.css') }}">
{% endblock %}

{% block connexion %}

    <div class="nav-item dropdown" id="dropitem3">
        <a class="nav-link dropdown-toggle hvr-grow-shadow" href="#" id="navbarDropdown" role="button"
           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           {% if personne.image%}
            <img
                    width="45" height="45px" class="rounded-circle"
                    src="{{ asset(personne.image) }}" alt=""{{ personne.name }}>
            {% else %}
            <img src="{{ asset('images/user_default.png') }}"  class="rounded-circle" alt="user.image">
            {% endif %}
        </a>
        <div class="dropdown-menu " id="ddm3" aria-labelledby="navbarDropdown">
            {% if personne.image %}
                <img
                        width="45" height="45px" class="rounded-circle"
                        src="{{ asset(personne.image) }}" alt=""{{ personne.name }}>
            {% else %}
                <img src="{{ asset('images/user_default.png') }}"  class="rounded-circle" alt="user.image">
            {% endif %}
            <h5> {{ personne.firstname }} </h5>
