{% extends 'Admin/main.html.twig' %}


{% block Games %}
    active
{% endblock%}
{% block Dashboard%}
{% endblock%}

{% block content %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <a href="{{ path('game.edit' ) }}" >
        <i class="fa fa-plus-circle fa-2x" aria-hidden="true"></i>
        <h4> Ajouter une jeu </h4>
    </a>

    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Game Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>image</th>
            <th>Actions</th>
        </tr>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.name }}</td>
                <td>{{ game.categorie }}</td>
                <td>{{ game.desccription }}</td>
                <td><img src="{{ asset(game.image) }}" alt="" class="rounded-circle" width="50px" height="50px"></td>
                <td>
                    <a href="{{ path('game.delete', {'id': game.id}) }}">
                        <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
                    </a>

                    <a href="{{ path('game.edit', {'id': game.id } ) }}">
                        <i class="fa fa-pencil-square-o fa-2x " aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>

    <nav aria-label="Page navigation example">
        <ul class="pagination" style="text-align: center">
            {% for p in 1..nbpage %}
                <li class="page-item"><a href="{{ path('gestion_jeux', {'page': p}) }}" class="page-link">{{ p }}</a></li>
            {% endfor %}
        </ul>
    </nav>
{% endblock %}