{% extends 'Admin/main.html.twig' %}

{% block users %}
    active
{% endblock%}
{% block Dashboard%}
{% endblock%}

{% block content %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th> Name</th>
            <th> First Name</th>
            <th>Age</th>
            <th>image</th>
            <th>Email</th>
            <th> Actions </th>
        </tr>
        {% for personne in personnes %}
            <tr>
                <td>{{ personne.id }}</td>
                <td>{{ personne.name }}</td>
                <td>{{ personne.firstname }}</td>
                <td>{{ personne.age }}</td>
                <td><img src="{{ asset( personne.image ) }}" alt="" class="rounded-circle" width="50px" height="50px"></td>
                <td>{{ personne.email }}</td>
                <td>
                    <a href="{{ path('personne.delete', {'id': personne.id }) }}">
                        <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
                    </a>

                    <a href="{{ path('personne.edit', {'id': personne.id } ) }}">
                        <i class="fa fa-pencil-square-o fa-2x " aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>

    <nav aria-label="Page navigation example">
        <ul class="pagination" style="text-align: center">
            {% for p in 1..nbpage %}
                <li class="page-item"><a href="{{ path('gestion_personne', {'page': p}) }}" class="page-link">{{ p }}</a></li>
            {% endfor %}
        </ul>
    </nav>
{% endblock %}