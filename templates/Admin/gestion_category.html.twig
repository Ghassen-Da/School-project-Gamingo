{% extends 'Admin/main.html.twig' %}


{% block Categories %}
    active
{% endblock%}
{% block Dashboard%}
{% endblock%}

{% block content %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <a href="{{ path('category.edit' ) }}" >
    <i class="fa fa-plus-circle fa-2x" aria-hidden="true"></i>
    <h4> Add a Category </h4>
    </a>

    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>image</th>
            <th>Actions</th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <img src="{{ asset(category.image) }}" alt="" class="rounded-circle" width="50px" height="50px">
                </td>
                <td>
                    <a href="{{ path('category.delete', {'id': category.id}) }}">
                        <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
                    </a>

                    <a href="{{ path('category.edit', {'id': category.id } ) }}">
                        <i class="fa fa-pencil-square-o fa-2x " aria-hidden="true"></i>
                    </a>
                </td>

            </tr>
        {% endfor %}
    </table>

    <nav aria-label="Page navigation example">
        <ul class="pagination" style="text-align: center">
            {% for p in 1..nbpage %}
                <li class="page-item"><a href="{{ path('gestion_category', {'page': p}) }}" class="page-link">{{ p }}</a></li>
            {% endfor %}
        </ul>
    </nav>
{% endblock %}